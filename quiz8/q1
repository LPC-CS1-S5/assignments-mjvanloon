#include <iostream>
#include <fstream>
#include <string>
using namespace std;


#include <string>
#include <iostream>
int main()
{
  string line;
  ifstream myfile ("python.txt");
  if (myfile.is_open())
  {
   getline (myfile,line);
   int occurrences = 0;
   std::string::size_type pos = 0;
   std::string s = line;
   std::string target = "th";
   while ((pos = s.find(target, pos )) != std::string::npos) {
          ++ occurrences;
          pos += target.length();
   }
   std::cout << occurrences << std::endl;
   myfile.close();
   return(0);
  }
}
