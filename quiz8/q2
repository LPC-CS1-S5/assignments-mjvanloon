#include <bits/stdc++.h>
using namespace std;

bool idlength(string email)
{
    int size;
	size = email.find("@");
	if ((size > 5 ) && (size < 15))
	return 1;
	else return 0;
}
bool domain(string email)


{
	int size;
	string domainname;
	size = email.find(".");
	domainname = email.substr(size + 1, size + 4);
	if ((domainname == "com") || (domainname == "org" ) || (domainname == "edu") || (domainname == "net") || (domainname == "gov"))
	return 1;
else return 0;
}

bool isChar(char c)
{
	return ((c >= 'a' && c <= 'z')
			|| (c >= 'A' && c <= 'Z'));
}

bool is_valid(string email)
{
	if (!isChar(email[0])) {
		return 0;
	}
	int At = -1, Dot = -1;
	for (int i = 0;
		i < email.length(); i++) {

		if (email[i] == '@') {

			At = i;
		}

		else if (email[i] == '.') {

			Dot = i;
		}
	}

	if (At == -1 || Dot == -1)
		return 0;

	if (At > Dot)
		return 0;

	return !(Dot >= (email.length() - 1));
}

int main()
{
	string email;
	cout << "enter the email address you want to validate \n";
cin >> email;


	bool ans = is_valid(email);

	if (ans) {
		cout << email << " : "
			<< "first char is valid" << endl;
	}
	else {
		cout << email << " : "
			<< "first char is invalid" << endl;
	}

bool ans2 = idlength(email);

	if (ans2) {
		cout << email << " : "
			<< "length of id is valid" << endl;
	}
	else {
		cout << email << " : "
			<< "length of id is invalid" << endl;
	}
bool ans3 = domain(email);

	if (ans3) {
		cout << email << " : "
			<< "domain name is valid" << endl;
	}
	else {
		cout << email << " : "
			<< "domain name is invalid" << endl;
	}

	return 0;
}
